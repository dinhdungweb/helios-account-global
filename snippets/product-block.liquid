{% assign lock_pages_metaobject = shop.metaobjects.lock_pages[settings.lock_pages_metaobject] %}
{% assign locked_product_ids = lock_pages_metaobject.products_to_lock.value | map: 'id' %}
{%- liquid
  assign cheapest_variant = product.variants | sort: 'price' | first

  assign on_sale = false
  if cheapest_variant.compare_at_price > cheapest_variant.price
    assign on_sale = true
  endif

  assign product_url = product.url | within: collection

  if animation_type == blank
    assign animation_type = "cc-fade-in-up"
  endif

  assign product_has_swatches = false
  if settings.swatch_enabled and settings.prod_block_swatches and hide_swatches != true
    for product_option in product.options_with_values
      if settings.swatch_option_name == product_option.name
        assign product_has_swatches = true
        break
      endif
    endfor
  endif

  assign primary_image = product.featured_media.preview_image
  assign product_images = product.media | where: 'media_type', 'image'

  assign custom_card_image_url_field = product.metafields.custom.card_featured_image_url
  assign custom_card_video_external_field = product.metafields.custom.card_featured_video_external
  assign custom_card_video_mp4_field = product.metafields.custom.card_featured_video_mp4
  assign custom_card_image_file_field = product.metafields.custom.card_featured_image_file
  assign custom_card_video_mp4_file_field = product.metafields.custom.card_featured_video_mp4_file
  assign media_image_file_field = product.metafields.custom.media_image_file
  

  if custom_card_video_external_field != blank
    assign external_video_url = custom_card_video_external_field.value | default: custom_card_video_external_field | strip
  endif

  if custom_card_video_mp4_field != blank and external_video_url == blank
    assign mp4_url = custom_card_video_mp4_field.value | default: custom_card_video_mp4_field | strip
  endif

  if custom_card_video_mp4_file_field != blank and external_video_url == blank and mp4_url == blank
    assign mp4_url = custom_card_video_mp4_file_field | file_url
  endif

  

  if settings.prod_hover == "second_image"
    assign secondary_image = product.media[1].preview_image

    for media in product_images offset: 1
      if media.id == product.featured_media.id
        assign active_media_found = true
      else
        if active_media_found
          assign secondary_image = media.preview_image
          break
        endif
      endif
    endfor
  endif

  if settings.prod_hover == "all_images" or product_has_swatches
    assign active_media_found = false
    assign images_before_featured = ""
    assign images_after_featured = ""

    for media in product_images
      if media.id == product.featured_media.id
        assign active_media_found = true
      endif

      assign image_placeholder = media | img_url: '1x1' | replace: '_1x1.', '_{width}x.'
      if active_media_found
        assign images_after_featured = images_after_featured | append: "," | append: image_placeholder
      else
        assign images_before_featured = images_before_featured | append: "," | append: image_placeholder
      endif
    endfor

    assign card_images = images_after_featured | append: images_before_featured | replace: ",,", "," | remove_first: ","
  endif

  assign has_featured_video = false
  if product.featured_media != blank and product.featured_media.media_type == "video"
    assign has_featured_video = true
  endif

  if external_video_url == blank and mp4_url == blank
    assign featured = product.featured_media

    if featured != blank and featured.media_type == "video"
      for source in featured.sources
        if source != blank and source.format == "mp4"
          assign video_source = source
          break
        endif
      endfor
      assign mp4_url = video_source.url
    elsif featured != blank and featured.media_type == "external_video"
      if featured.host == "youtube"
        assign external_video_url = "https://www.youtube.com/watch?v=" | append: featured.external_id
      elsif featured.host == "vimeo"
        assign external_video_url = "https://vimeo.com/" | append: featured.external_id
      endif
    endif
  endif

  assign param_symbol = "?"
  if product.url contains "?"
    assign param_symbol = "&"
  endif
 -%}
{% if show_title == nil %}{% assign show_title = true %}{% endif %}
{% if show_price == nil %}{% assign show_price = true %}{% endif %}
{% if show_review == nil %}{% assign show_review = true %}{% endif %}
{% if show_add_to_cart == nil %}{% assign show_add_to_cart = true %}{% endif %}

<div class="product-block
  cc-product-block
  {% unless product.available %} sold-out{% endunless %}
  {% if on_sale %} on-sale{% endif %}
  {% if settings.prod_hover == "second_image" %}hover-image{% endif %}
  {% if settings.prod_hover == "all_images" and product.images.size > 1 %}all-images{% endif %}
  {% if product.tags contains 'meta-layout-right' %}layout-right{% endif %}
  {% if settings.prod_label_layout == 'marquee_on_hover' %} product-block--marquee-on-hover {% endif%}
  {% if settings.quickbuy_enabled %}product-block--quickbuy{% endif %}
  {% if mp4_url != blank or external_video_url != blank or has_featured_video %}product-block--video{% endif %}
  {% if product_has_swatches %}product-block--has-swatches{% endif %}
  {{ product_class }}"
     data-loop-index="{{ i }}"
  {% if animate %} data-cc-animate="{{ animation_type }}" data-cc-animate-delay="{{ animate | times: 0.15 }}s" {% endif %}
  {% if card_images %}
    data-product-images="{{ card_images }}"
  {% endif %}
>

  <div class="product-block__inner">
    <div class="image {% if settings.prod_hover == "second_image" and product.media.size > 1 %}image--hover-second {% if primary_image.aspect_ratio == secondary_image.aspect_ratio %}image--same-aspect-ratio{% endif %}{% endif %}">
      {% if settings.prod_label_layout contains 'marquee' %}
        <div class="product-marquee">
          {% render 'product-label', product: product, cheapest_variant: cheapest_variant %}
        </div>
      {% endif %}

      <a data-cc-animate-click class="image-inner" href="{{ product_url }}" aria-label="{{ product.title | escape }}" tabindex="-1">
        <div class="image__first">
          {%- assign show_video_enabled = settings.prod_show_videos -%}
          {%- assign has_video_source = false -%}
          {%- if external_video_url != blank or mp4_url != blank -%}
            {%- assign has_video_source = true -%}
          {%- elsif product.featured_media != blank and product.featured_media.media_type == "video" -%}
            {%- assign has_video_source = true -%}
          {%- endif -%}

          {%- if show_video_enabled and has_video_source -%}
            {%- if external_video_url != blank -%}
              {% render 'inline-video', video_external: external_video_url, image: primary_image, autoplay: false, loop: false %}
            {%- elsif mp4_url != blank -%}
              {% render 'inline-video', video: mp4_url, image: primary_image, autoplay: false, loop: false %}
            {%- else -%}
              {% render 'inline-video', video_shopify: product.featured_media, image: primary_image, autoplay: false, loop: false %}
            {%- endif -%}
          {%- else -%}
            {%- if custom_card_image_file_field != blank -%}
              <img class="rimage__image" src="{{ custom_card_image_file_field | file_url }}" alt="{{ product.title | escape }}" loading="lazy">
            {%- elsif custom_card_image_url_field != blank -%}
              {% assign custom_card_image_url = custom_card_image_url_field.value | default: custom_card_image_url_field | strip %}
              <img class="rimage__image" src="{{ custom_card_image_url }}" alt="{{ product.title | escape }}" loading="lazy">
            {%- else -%}
              {% render 'responsive-image', image: primary_image, min_aspect_ratio: 0.6 %}
            {%- endif -%}
          {%- endif -%}

          {% unless settings.prod_label_layout contains 'marquee' %}
            {% render 'product-label', product: product, cheapest_variant: cheapest_variant %}
          {% endunless %}
        </div>

        {% if settings.prod_hover == "second_image" and product.media.size > 1 %}
        <div class="image__second">
          {% render 'responsive-image', image: secondary_image, aspect_ratio: primary_image.aspect_ratio %}
        </div>
        {% endif %}
      </a>
    </div>

    {%- if settings.swatch_enabled and settings.prod_block_swatches and hide_swatches != true -%}
      {%- assign option_limit = 3 -%}
      {%- for product_option in product.options_with_values -%}
        {%- if settings.swatch_option_name == product_option.name -%}
          <ul class="cc-swatches {% if settings.swatch_use_prod_images == true %}cc-swatches-prod-img cc-swatches-prod-img-{{ settings.swatch_prod_images_shape }}{% endif %}" data-option-name="{{ product_option.name | escape }}">
            {%- if product.options.size == 1 -%}
              {%- for variant in product.variants -%}
                {%- assign variant_image = variant.featured_media.preview_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                {% if forloop.index <= option_limit %}
                  <li>
                    <a rel="nofollow"
                       href="{{ product.url }}{{ param_symbol }}variant={{ variant.id }}"
                       title="{{ variant.title | escape }}"
                       {% if variant.featured_media.preview_image %}
                       data-variant-image="{{ variant_image }}"
                       {% endif %}
                        class="{% unless variant.available %}unavailable{% endunless %} lazyload"
                          data-option-item="{{ variant.title | downcase | escape }}"
                          {% if variant.featured_media %}data-media="{{ variant.featured_media.id }}"{% endif %}
                    {% if settings.swatch_method == "image" and settings.swatch_use_prod_images == false  %}
                      data-bgset="{{ variant.title | handle | append: '.png' | file_img_url: '48x48', crop: 'center' }}"
                    {% elsif settings.swatch_use_prod_images == true %}
                      data-bgset="{{ variant.featured_media.preview_image | img_url: '72x', crop: 'center' }}"
                      style="{% if settings.swatch_prod_images_shape == "natural" %}padding-top: {{ 1 | divided_by: variant.featured_media.preview_image.aspect_ratio | times: 100 }}%;{% endif %}"
                    {% else %}
                      style="background-color:{{ variant.title | downcase | remove: ' ' | escape }}"
                    {% endif %}>
                      {{ variant.title }}
                  </a>
                  </li>
                {% endif %}
              {%- endfor -%}
              {%- if product.variants.size > option_limit -%}
                <li class="product-block__more-label"><span>&plus;{{ product.variants.size | minus: option_limit }}</span></li>
              {%- endif -%}
            {%- else -%}
              {%- assign product_option_position_0index = product_option.position | minus: 1 -%}
              {%- for product_option_value in product_option.values -%}
                {%- liquid
                  assign option_value_variant = false
                  assign is_unavailable = true
                  for variant in product.variants
                    if variant.options[product_option_position_0index] == product_option_value
                      assign option_value_variant = variant
                      break
                    endif
                  endfor
                  for variant in product.variants
                    if variant.available and variant.options[product_option_position_0index] == product_option_value
                      assign is_unavailable = false
                      break
                    endif
                  endfor
                  assign variant_image = option_value_variant.featured_media.preview_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.'
                -%}
                {% if forloop.index <= option_limit %}
                  <li>
                    <a rel="nofollow"
                       href="{{ product.url }}{{ param_symbol }}variant={{ option_value_variant.id }}"
                       title="{{ product_option_value | escape }}"
                       class="{% if is_unavailable %} unavailable{% endif %} lazyload"
                       {% if option_value_variant.featured_media.preview_image %}
                        data-variant-image="{{ variant_image }}"
                       {% endif %}
                        data-option-item="{{ product_option_value | downcase | escape }}"
                        {% if option_value_variant.featured_media %}data-media="{{ option_value_variant.featured_media.id }}"{% endif %}
                      {% if settings.swatch_method == "image" and settings.swatch_use_prod_images == false  %}
                        data-bgset="{{ product_option_value | handle | append: '.png' | file_img_url: '48x48', crop: 'center' }}"
                      {% elsif settings.swatch_use_prod_images == true %}
                        data-bgset="{{ option_value_variant.featured_media.preview_image | img_url: '72x', crop: 'center' }}"
                        style="{% if settings.swatch_prod_images_shape == "natural" %}padding-top: {{ 1 | divided_by: option_value_variant.featured_media.preview_image.aspect_ratio | times: 100 }}%;{% endif %}"
                      {% else %}
                        style="background-color:{{ product_option_value | downcase | remove: ' ' | escape }}"
                      {% endif %}>
                        {{ product_option_value }}
                    </a>
                  </li>
                {% endif %}
              {%- endfor -%}
              {%- if product_option.values.size > option_limit -%}
                <li class="product-block__more-label"><span>&plus;{{ product_option.values.size | minus: option_limit }}</span></li>
              {%- endif -%}
            {%- endif -%}
          </ul>
        {%- endif -%}
      {%- endfor -%}
    {%- endif -%}

    {%- if settings.quickbuy_enabled -%}
      <div class="cc-quick-buy-btn-container">
        <a href="{{ product_url }}" class="button alt cc-quick-buy-btn">
          {{ 'products.listing.buy_now' | t }}
        </a>
      </div>
    {%- endif -%}

    <a data-cc-animate-click href="{{ product_url }}" class="caption upper">
      {% if show_title %}
      <span class="card-title-ellipsis">{{ product.title }}</span>
      {% endif %}

      {% if show_vendor %}
        <span class="vendor">{{ product.vendor }}</span>
      {% endif %}

      {% if show_price %}
      <div class="price">
        {% if product.tags contains 'angia' %}
          <!-- Nếu sản phẩm có tag "angia" thì hiển thị "Giá liên hệ" -->
          <b style="color:#FAB320">Contact for Price</b>

        {% elsif settings.lock_pages_tag_enable %}

          {% if customer == nil and settings.enable_locked_content and settings.lock_all_product_prices %}
            <!-- Nếu khách chưa đăng nhập và giá bị khóa hoàn toàn -->
            <b style="color:#FAB320">{{ settings.price_locked_text }}</b>
          
          {% elsif customer == nil and settings.enable_locked_content and locked_product_ids contains product.id %}
            <!-- Nếu khách chưa đăng nhập và sản phẩm cụ thể này bị khóa giá -->
            <b style="color:#FAB320">{{ settings.price_locked_text }}</b>
          
          {% elsif customer and customer.tags contains settings.lock_pages_customer_segmentstion %}
            <!-- Nếu khách hàng đã đăng nhập và có tag => Hiển thị giá với tier discount -->
            {% if product.price_varies %}{{ 'products.listing.from' | t }}{% endif %}
            {% render 'tier-price', 
              price: cheapest_variant.price,
              compare_at_price: cheapest_variant.compare_at_price,
              product: product,
              customer: customer,
              show_original: true,
              show_badge: true
            %}
            {% render 'unit-price', variant: cheapest_variant %}
          
          {% elsif settings.enable_locked_content %}
            {% if settings.lock_all_product_prices %}
              <!-- Nếu tất cả sản phẩm bị khóa giá -->
              <b style="color:#FF0000">You do not have permission to view this price</b>
            {% elsif locked_product_ids contains product.id %}
              <!-- Nếu sản phẩm cụ thể này bị khóa giá -->
              <b style="color:#FF0000">Special Product for Exclusive Customers</b>
            {% else %}
              <!-- Nếu sản phẩm không bị khóa, hiển thị giá với tier discount -->
              {% if product.price_varies %}{{ 'products.listing.from' | t }}{% endif %}
              {% render 'tier-price', 
                price: cheapest_variant.price,
                compare_at_price: cheapest_variant.compare_at_price,
                product: product,
                customer: customer,
                show_original: true,
                show_badge: true
              %}
              {% render 'unit-price', variant: cheapest_variant %}
            {% endif %}
          
          {% else %}
            <!-- Nếu không có bất kỳ điều kiện nào bị khóa -->
            {% if product.price_varies %}{{ 'products.listing.from' | t }}{% endif %}
            {% render 'tier-price', 
              price: cheapest_variant.price,
              compare_at_price: cheapest_variant.compare_at_price,
              product: product,
              customer: customer,
              show_original: true,
              show_badge: true
            %}
            {% render 'unit-price', variant: cheapest_variant %}
          {% endif %}
          
        {% else %}
          
          {% if customer == nil and settings.enable_locked_content and settings.lock_all_product_prices %}
            <!-- Nếu khách chưa đăng nhập và giá bị khóa hoàn toàn -->
            <b style="color:#FAB320">{{ settings.price_locked_text }}</b>
          
          {% elsif customer == nil and settings.enable_locked_content and locked_product_ids contains product.id %}
            <!-- Nếu khách chưa đăng nhập và sản phẩm cụ thể này bị khóa giá -->
            <b style="color:#FAB320">{{ settings.price_locked_text }}</b>
    
          {% else %}
            <!-- Nếu không có bất kỳ điều kiện nào bị khóa, hiển thị giá với tier discount -->
            {% if product.price_varies %}{{ 'products.listing.from' | t }}{% endif %}
            {% render 'tier-price', 
              price: cheapest_variant.price,
              compare_at_price: cheapest_variant.compare_at_price,
              product: product,
              customer: customer,
              show_original: true,
              show_badge: true
            %}
            {% render 'unit-price', variant: cheapest_variant %}
          {% endif %}
          
        {% endif %}
        

      </div>
      {% endif %}
    </a>

    {% if show_review and settings.show_product_block_reviews and product.metafields.reviews != blank %}
      <a data-cc-animate-click href="{{ product_url }}" class="themed-product-reviews" tabindex="-1">
        {% render 'rating', rating_value: product.metafields.reviews.rating.value %}
        {%- assign rating_count = product.metafields.reviews.rating_count | plus: 0 -%}
        {% if rating_count != blank and rating_count > 0 %}
          <span class="cc-rating-custom-caption">
            {{ rating_count }} {{ 'products.product.reviews_link' | t: count: rating_count }}
          </span>
        {% endif %}
      </a>
      {% elsif show_review %}
      <a data-cc-animate-click href="{{ product_url }}" class="themed-product-reviews" tabindex="-1">
        <div class="cc-rating" role="img" data-rating-decimal="{{ rating_decimal }}" aria-label="{{ 'general.accessibility_labels.star_reviews_info' | t: rating_value: rating_value, rating_max: rating_value.scale_max }}">
          <span aria-hidden="true" class="cc-rating-stars">
            <span class="cc-rating-stars--inactive">
              {%- liquid
                for i in (1..5)
                  render 'rating-star-icon'
                endfor
              -%}
            </span>
            <span class="cc-rating-stars--active">
              {%- liquid
                for i in (1..rating_ceiling)
                  render 'rating-star-icon'
                endfor
              -%}
            </span>
          </span>
        </div><span class="cc-rating-custom-caption">
            0 Đánh giá
          </span>
      </a>
    {% endif %}
  </div>
  {% if section.settings.featured_addtocart_hide or show_add_to_cart == false %}
  {% else %}
    {% if settings.addtocart_enabled %}
      
      {% if settings.lock_pages_tag_enable %}
        {% if customer == nil and settings.enable_locked_content and settings.lock_all_product_prices %}
          <a href="{{ routes.account_url }}" class="button alt">{{ settings.atc_locked_text }}</a>
        {% elsif customer == nil and settings.enable_locked_content and locked_product_ids contains product.id %}
          <a href="{{ routes.account_url }}" class="button alt">{{ settings.atc_locked_text }}</a>
        {% elsif customer and customer.tags contains settings.lock_pages_customer_segmentstion %}
          <a href="{{ product_url }}" class="button alt">
            {{ 'products.listing.buy_now' | t }}
          </a>
        {% elsif settings.enable_locked_content %}
          {% if settings.lock_all_product_prices %}
            <a href="{{ routes.account_url }}" style="pointer-events: none" class="button alt">{{ settings.atc_locked_text_tag }}</a>
          {% elsif locked_product_ids contains product.id %}
            <a href="{{ routes.account_url }}" style="pointer-events: none" class="button alt">{{ settings.atc_locked_text_tag }}</a>
          {% else %}
            <!-- Nếu sản phẩm không bị khóa, hiển thị giá bình thường -->
            <a href="{{ product_url }}" class="button alt">
              {{ 'products.listing.buy_now' | t }}
            </a>
          {% endif %}
        {% else %}
          <a href="{{ product_url }}" class="button alt">
            {{ 'products.listing.buy_now' | t }}
          </a>
        {% endif %}
      {% else %}
        {% if customer == nil and settings.enable_locked_content and settings.lock_all_product_prices %}
          <a href="{{ routes.account_url }}" class="button alt">{{ settings.atc_locked_text }}</a>
        {% elsif customer == nil and settings.enable_locked_content and locked_product_ids contains product.id %}
          <a href="{{ routes.account_url }}" class="button alt">{{ settings.atc_locked_text }}</a>
        {% else %}
          <a href="{{ product_url }}" class="button alt">
            {{ 'products.listing.buy_now' | t }}
          </a>
        {% endif %}
      {% endif %}
      
    {% endif %}
  {% endif %}
</div>
