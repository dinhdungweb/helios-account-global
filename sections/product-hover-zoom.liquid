{{ 'product-hover-zoom.css' | asset_url | stylesheet_tag }}

<section class="product-hover-zoom-section" style="--section-height: {{ section.settings.section_height }}px; --list-width: {{ section.settings.list_width_px }}px; --thumb-size: {{ section.settings.thumb_size }}px; --image-ratio: {{ section.settings.image_ratio }};">
  <ul class="product-hover-zoom__list" id="goods-list">
    {%- for block in section.blocks -%}
      {%- assign product = block.settings.product -%}
      <li class="product-hover-zoom__item" {{ block.shopify_attributes }}>
        <a href="{{ product.url | default: '#' }}" class="product-hover-zoom__goods">
          {%- assign thumb_image = block.settings.product_image | default: product.featured_image -%}
          {%- if thumb_image != blank -%}
            <img 
              src="{{ thumb_image | image_url: width: 400 }}"
              alt="{{ product.title | escape }}"
              class="product-hover-zoom__thumb"
              loading="lazy"
            >
          {%- else -%}
            {{ 'product-1' | placeholder_svg_tag: 'product-hover-zoom__placeholder' }}
          {%- endif -%}
          <div class="product-hover-zoom__info">
            <p class="product-hover-zoom__name">
              {{ product.title | default: 'Tên sản phẩm' }}
            </p>
            <p class="product-hover-zoom__price">
              {%- if product != blank -%}
                {{ product.price | money }}
              {%- else -%}
                {{ 0 | money }}
              {%- endif -%}
            </p>
          </div>
        </a>
        
        <div class="product-hover-zoom__zoom">
          {%- if block.settings.zoom_image_pc != blank -%}
            <img 
              class="product-hover-zoom__zoom-pc"
              src="{{ block.settings.zoom_image_pc | image_url: width: 1920 }}"
              alt="{{ product.title | default: block.settings.product_name | escape }}"
              loading="lazy"
            >
          {%- endif -%}
          {%- if block.settings.zoom_image_mobile != blank -%}
            <img 
              class="product-hover-zoom__zoom-mo"
              src="{{ block.settings.zoom_image_mobile | image_url: width: 800 }}"
              alt="{{ product.title | default: block.settings.product_name | escape }}"
              loading="lazy"
            >
          {%- endif -%}
        </div>
        
        <div class="product-hover-zoom__detail"></div>
      </li>
    {%- endfor -%}
  </ul>
</section>

{% schema %}
{
  "name": "Product Hover Zoom",
  "class": "section-product-hover-zoom",
  "settings": [
    {
      "type": "range",
      "id": "section_height",
      "label": "Chiều cao section (px)",
      "min": 600,
      "max": 1200,
      "step": 10,
      "default": 1080,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "list_width_px",
      "label": "Chiều rộng danh sách sản phẩm (px)",
      "min": 800,
      "max": 1600,
      "step": 20,
      "default": 1200,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "thumb_size",
      "label": "Chiều rộng ảnh sản phẩm (px)",
      "min": 50,
      "max": 400,
      "step": 5,
      "default": 200,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Tỷ lệ ảnh",
      "options": [
        {
          "value": "1/1",
          "label": "Vuông (1:1)"
        },
        {
          "value": "2/3",
          "label": "Dọc (2:3)"
        },
        {
          "value": "4/5",
          "label": "Dọc (4:5)"
        },
        {
          "value": "4/3",
          "label": "Ngang (4:3)"
        },
        {
          "value": "16/9",
          "label": "Rộng (16:9)"
        }
      ],
      "default": "1/1"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Sản phẩm",
      "limit": 4,
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Sản phẩm"
        },
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Ảnh thumbnail (Ghi đè - Mặc định lấy từ sản phẩm)"
        },
        {
          "type": "image_picker",
          "id": "zoom_image_pc",
          "label": "Ảnh zoom - Desktop"
        },
        {
          "type": "image_picker",
          "id": "zoom_image_mobile",
          "label": "Ảnh zoom - Mobile"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Hover Zoom",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" }
      ]
    }
  ]
}
{% endschema %}
