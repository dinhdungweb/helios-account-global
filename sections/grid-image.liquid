<!-- Section Liquid Code -->
<div id="section-id-{{ section.id }}" class="section-id-{{ section.id }} wide-container custom-image-grid">
  <div class="{% if section.settings.grid_image_full_width %}image-grid-container-full{% else %}image-grid-container-custom{% endif %}">
    <div class="image-grid">
      <!-- Right Column -->
      <div class="right-column">
        {% for block in section.blocks %}
          {%- liquid
            assign ratio_val = blank
            if section.settings.item_ratio == '1/1'
              assign ratio_val = 1
            elsif section.settings.item_ratio == '3/4'
              assign ratio_val = 0.75
            elsif section.settings.item_ratio == '4/3'
              assign ratio_val = 1.333
            elsif section.settings.item_ratio == '16/9'
              assign ratio_val = 1.777
            endif
          -%}
          {% if block.settings.image %}
            <div class="right-image">
              <a href="{{ block.settings.link | default: '#' }}">
                <div class="image-overlay">
                  {% if ratio_val %}
                    {% render 'responsive-image', image: block.settings.image, aspect_ratio: ratio_val %}
                  {% else %}
                    {% render 'responsive-image', image: block.settings.image %}
                  {% endif %}
                  {% if block.settings.text != blank %}
                    <div class="custom-heading">{{ block.settings.text }}</div>
                  {% endif %}
                </div>
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>


<!-- Styles -->
<style>
  #section-id-{{ section.id }} .image-overlay {
    position: relative;
    width: 100%;
  }

  #section-id-{{ section.id }} .image-overlay img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  #section-id-{{ section.id }} .custom-heading {
    position: absolute;
    bottom: 5%;
    left: 50%;
    transform: translateX(-50%);
    color: white;
    font-size: {{ settings.font_size_custom_heading | default: 14 }}px;
    text-align: center;
    border-radius: 5px;
    min-width: 130px;
  }

  .section-id-{{ section.id }}.custom-image-grid {
    display: flex;
    justify-content: center;
    align-items: center;
    /* padding-bottom: 50px; */
  }

  #section-id-{{ section.id }} .image-grid-container-full {
    width: 100%;
  }

  #section-id-{{ section.id }} .image-grid-container-custom {
    width: {{ section.settings.grid_image_with | default: 1400 }}px;
  }

  #section-id-{{ section.id }} .right-column {
    max-width: 100%;
    display: grid;
    grid-template-columns: repeat({{ section.settings.item_for_row | default: 2 }}, 1fr);
    grid-gap: 20px;
  }

  #section-id-{{ section.id }} .right-column .right-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Responsive for Mobile */
  @media (max-width: 991px) {
    #section-id-{{ section.id }} .right-column {
      grid-template-columns: repeat({{ section.settings.item_per_row_mobile | default: 1 }}, 1fr);
      grid-gap: 10px;
    }
  }

  @media (max-width: 1099px) {
    #section-id-{{ section.id }} .custom-heading {
      bottom: 3%;
    }
  }
</style>
<!-- Schema Settings -->
{% schema %}
{
  "name": "Custom Image Grid",
  "settings": [
    {
      "type": "checkbox",
      "id": "grid_image_full_width",
      "label": "Full width",
      "default": false
    },
    {
      "type": "range",
      "id": "grid_image_with",
      "min": 800,
      "max": 2000,
      "step": 12,
      "unit": "px",
      "label": "Grid image container",
      "default": 1400
    },
    {
      "type": "range",
      "id": "item_for_row",
      "min": 1,
      "max": 5,
      "step": 1,
      "label": "Maximum columns per row",
      "default": 2
    },
    {
      "type": "select",
      "id": "item_ratio",
      "label": "Item aspect ratio",
      "options": [
        { "value": "natural", "label": "Natural" },
        { "value": "1/1", "label": "Square (1:1)" },
        { "value": "3/4", "label": "Portrait (3:4)" },
        { "value": "4/3", "label": "Landscape (4:3)" },
        { "value": "16/9", "label": "Wide (16:9)" }
      ],
      "default": "natural"
    },
    {
      "type": "select",
      "id": "item_per_row_mobile",
      "label": "Mobile products per row",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "1"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Right Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Image Link"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text on Right Image",
          "default": "Nhập nội dung tại đây"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}