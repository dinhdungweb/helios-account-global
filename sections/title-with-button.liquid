<!-- Section: Media (Video or Image) with Text and Buttons -->
<section class="title-with-button">
  <div class="title-with-button-container {% if section.settings.content_position == 'left' %}reverse{% endif %}">
    <div class="title-with-button-content align-{{ section.settings.text_alignment }}">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.paragraph }}</p>
      <div class="title-with-button-buttons">
        {% for block in section.blocks %}
          <a href="{{ block.settings.button_link }}" class="title-with-button-btn" target="_blank" rel="noopener">
            {{ block.settings.button_text }}
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
.title-with-button {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.title-with-button-container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.title-with-button-container.reverse {
  flex-direction: row-reverse;
}
.title-with-button-media {
  flex: 1;
  max-width: 50%;
  position: relative;
}
.title-with-button-content {
    display: flex;
    flex: 1;
    padding: 20px;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    box-sizing: border-box;
}
.title-with-button-content.align-left {
  text-align: left;
  align-items: flex-start;
}
.title-with-button-content.align-center {
  text-align: center;
  align-items: center;
}
.title-with-button-content.align-right {
  text-align: right;
  align-items: flex-end;
}
.title-with-button-content h2 {
  font-size: 24px;
  margin-bottom: 10px;
}
.title-with-button-content p {
  font-size: 16px;
  line-height: 1.5;
  margin: 0;
}
.title-with-button-buttons {
  margin-top: 24px;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  gap: 12px;
  overflow-x: auto;
  padding-bottom: 8px;
  scrollbar-width: thin;
  scrollbar-color: #333 #111;
  -webkit-overflow-scrolling: touch;
  max-width: 100%;
  width: 100%;
  scroll-snap-type: x mandatory;   /* Snap hiệu ứng */
}
.title-with-button-btn {
    display: inline-block;
    min-width: 155px;
    font-size: 0.9rem;
    white-space: nowrap;
    text-align: center;
    padding: 10px 10px;
    background: #fab320;
    color: #111;
    text-decoration: none;
    border-radius: 3px;
    transition: background 0.2s;
    scroll-snap-align: start;
}
.title-with-button-btn:hover {
  background: #F2F2F2;
}
@media (min-width: 1300px) {
  .title-with-button-content {
    padding: 20px;
  }
}
/* Responsive styling for mobile */
@media (max-width: 768px) {
  .title-with-button-container,
  .title-with-button-container.reverse {
    flex-direction: column !important;
  }
  .title-with-button-media {
    max-width: 100%;
    margin-bottom: 20px;
  }
  .title-with-button-content {
    max-width: 100%;
    text-align: center;
    padding: 20px 16px;
  }
  .title-with-button-buttons {
    gap: 8px;
    padding-bottom: 4px;
  }
}
.title-with-button-buttons::-webkit-scrollbar {
  height: 6px;
}
.title-with-button-buttons::-webkit-scrollbar-thumb {
  background: #bbb;
  border-radius: 3px;
}
.title-with-button-buttons::-webkit-scrollbar-track {
  background: #fff;
}
</style>

{% schema %}
{
  "name": "Title with button",
  "settings": [
    {
      "type": "select",
      "id": "content_position",
      "label": "Content Position",
      "options": [
        { "value": "left", "label": "Text Left - Media Right" },
        { "value": "right", "label": "Media Left - Text Right" }
      ],
      "default": "right"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "Your descriptive text here."
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Click Here"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Title with button",
      "category": "Custom",
      "blocks": [
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
