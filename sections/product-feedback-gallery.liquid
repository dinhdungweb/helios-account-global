{% comment %}
  Product Feedback Gallery Section
  Displays customer feedback images from product metafields
{% endcomment %}

{% if product.metafields.custom.feedback.value and product.metafields.custom.feedback.value.size > 0 %}
  <div class="product-feedback-gallery section-{{ section.id }}-padding">
    {% assign container_class = 'page-width' %}
    {% if section.settings.section_width == 'full' %}
      {% assign container_class = 'full-width-container' %}
    {% elsif section.settings.section_width == 'custom' %}
      {% assign container_class = 'custom-width-container' %}
    {% endif %}
    <div class="{{ container_class }}">
      {% if section.settings.heading != blank %}
        <div class="feedback-header">
          <h2 class="feedback-title h2">{{ section.settings.heading }}</h2>
          {% if section.settings.description != blank %}
            <div class="feedback-description rte">
              {{ section.settings.description }}
            </div>
          {% endif %}
        </div>
      {% endif %}

      <div class="feedback-gallery-grid">
        {% for image in product.metafields.custom.feedback.value %}
          <div class="feedback-item" data-index="{{ forloop.index }}">
            <div class="feedback-image-wrapper">
              <img 
                src="{{ image | image_url: width: 800 }}" 
                alt="{{ section.settings.heading | default: 'Feedback từ khách hàng' }} {{ forloop.index }}"
                loading="lazy"
                width="400"
                height="400"
                class="feedback-image"
              >
              {% if section.settings.show_overlay %}
                <div class="feedback-overlay">
                  <span class="feedback-zoom-icon">
                    {% render 'svg-gallery' %}
                  </span>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>


{% endif %}

<style>
  .product-feedback-gallery {
    margin: {{ section.settings.margin_top }}px 0 {{ section.settings.margin_bottom }}px;
  }

  .full-width-container {
    width: 100%;
    padding: 0 20px;
    max-width: none;
  }

  .custom-width-container {
    width: 100%;
    max-width: {{ section.settings.custom_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .page-width {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .feedback-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .feedback-title {
    color: {{ section.settings.heading_color | default: '#000' }};
  }

  .feedback-description {
    max-width: 600px;
    margin: 0 auto;
    color: {{ section.settings.text_color | default: '#666' }};
    text-align: center;
  }

  .feedback-gallery-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.images_per_row_desktop }}, 1fr);
    gap: {{ section.settings.grid_gap }}px;
    margin-top: 32px;
  }

  .feedback-item {
    position: relative;
    border-radius: {{ section.settings.border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .feedback-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  }

  .feedback-image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 125%; /* 4:5 Aspect Ratio */
    overflow: hidden;
  }

  .feedback-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .feedback-item:hover .feedback-image {
    transform: scale(1.05);
  }

  .feedback-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .feedback-item:hover .feedback-overlay {
    opacity: 1;
  }

  .feedback-zoom-icon {
    color: white;
    font-size: 24px;
  }



  /* Responsive Design */
  @media screen and (max-width: 1024px) {
    .feedback-gallery-grid {
      grid-template-columns: repeat({{ section.settings.images_per_row_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 768px) {
    .feedback-gallery-grid {
      grid-template-columns: repeat({{ section.settings.images_per_row_mobile }}, 1fr);
      gap: 16px;
    }
    
    .feedback-header {
      margin-bottom: 24px;
    }
    
    .feedback-title {
      font-size: 1.5rem;
    }

    .full-width-container,
    .custom-width-container,
    .page-width {
      padding: 0 15px;
    }
  }
</style>



{% schema %}
{
  "name": "Product Feedback Gallery",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Nội dung"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Tiêu đề",
      "default": "Feedback từ khách hàng"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Mô tả"
    },
    {
      "type": "header",
      "content": "Bố cục section"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Chiều rộng section",
      "options": [
        {
          "value": "container",
          "label": "Container (1200px)"
        },
        {
          "value": "full",
          "label": "Toàn bộ chiều rộng"
        },
        {
          "value": "custom",
          "label": "Tùy chỉnh"
        }
      ],
      "default": "container"
    },
    {
      "type": "range",
      "id": "custom_width",
      "min": 800,
      "max": 1600,
      "step": 50,
      "unit": "px",
      "label": "Chiều rộng tùy chỉnh",
      "default": 1200,
      "info": "Chỉ áp dụng khi chọn 'Tùy chỉnh'"
    },
    {
      "type": "header",
      "content": "Số ảnh hiển thị trên từng thiết bị"
    },
    {
      "type": "range",
      "id": "images_per_row_desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": "Desktop (>1024px)",
      "default": 4
    },
    {
      "type": "range",
      "id": "images_per_row_tablet",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Tablet (768px - 1024px)",
      "default": 3
    },
    {
      "type": "range",
      "id": "images_per_row_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "label": "Mobile (<768px)",
      "default": 2
    },
    {
      "type": "header",
      "content": "Màu sắc"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Màu tiêu đề",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Màu văn bản",
      "default": "#666666"
    },
    {
      "type": "header",
      "content": "Thiết kế"
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 10,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Khoảng cách giữa ảnh",
      "default": 20
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Bo góc ảnh",
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Hiển thị overlay khi hover",
      "default": true
    },
    {
      "type": "header",
      "content": "Khoảng cách"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin trên",
      "default": 40
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin dưới",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Product Feedback Gallery"
    }
  ]
}
{% endschema %}