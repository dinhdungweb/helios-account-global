{% render "advanced-form-to-sheet", 
  af-title : section.settings.form-title, 
  af-subtitle : section.settings.form-subtitle,
  af-description : section.settings.form-description, 
  af-form-action-url : section.settings.form_action_url,
  af-banner-image : section.settings.banner_image,
  af-banner-position : section.settings.banner_position,
  af-success-message : section.settings.success_message,
  af-error-message : section.settings.error_message,
  af-button-text : section.settings.button_text,
  af-button-color : section.settings.button_color,
  af-form-fields : section.settings.form_fields
%}

{% schema %}
  {
    "name": "Advanced Form to Sheet",
    "settings": [
      {
        "type": "text",
        "id": "form-title",
        "label": "Form Title",
        "default": "Liên hệ với chúng tôi"
      },
      {
        "type": "text",
        "id": "form-subtitle",
        "label": "Form Subtitle"
      },
      {
        "type": "richtext",
        "id": "form-description",
        "label": "Form Description",
        "default": "<p>Vui lòng điền thông tin để liên hệ với chúng tôi</p>"
      },
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Banner Image"
      },
      {
        "type": "select",
        "id": "banner_position",
        "label": "Banner Position",
        "default": "left",
        "options": [
          {"label": "Trái", "value": "left"},
          {"label": "Phải", "value": "right"},
          {"label": "Không", "value": "none"}
        ]
      },
      {
        "type": "text",
        "id": "form_action_url",
        "label": "Google Form Action URL",
        "placeholder": "https://docs.google.com/forms/d/e/xxx/formResponse"
      },
      {
        "type": "text",
        "id": "success_message",
        "label": "Success Message",
        "default": "Gửi thành công! Cảm ơn bạn."
      },
      {
        "type": "text",
        "id": "error_message",
        "label": "Error Message",
        "default": "Gửi thất bại. Vui lòng thử lại!"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Gửi"
      },
      {
        "type": "color",
        "id": "button_color",
        "label": "Button Color",
        "default": "#FAB320"
      }
    ],
    "blocks": [
      {
        "type": "text_field",
        "name": "Text Field",
        "settings": [
          {
            "type": "text",
            "id": "label",
            "label": "Field Label",
            "default": "Tên"
          },
          {
            "type": "text",
            "id": "entry",
            "label": "Google Form Entry ID",
            "placeholder": "entry.xxx"
          },
          {
            "type": "text",
            "id": "placeholder",
            "label": "Placeholder",
            "default": "Nhập tên của bạn"
          },
          {
            "type": "checkbox",
            "id": "required",
            "label": "Required",
            "default": true
          },
          {
            "type": "select",
            "id": "input_type",
            "label": "Input Type",
            "default": "text",
            "options": [
              {"label": "Text", "value": "text"},
              {"label": "Email", "value": "email"},
              {"label": "Phone", "value": "tel"},
              {"label": "Number", "value": "number"},
              {"label": "URL", "value": "url"},
              {"label": "Date", "value": "date"},
              {"label": "Time", "value": "time"}
            ]
          }
        ]
      },
      {
        "type": "textarea_field",
        "name": "Textarea Field",
        "settings": [
          {
            "type": "text",
            "id": "label",
            "label": "Field Label",
            "default": "Tin nhắn"
          },
          {
            "type": "text",
            "id": "entry",
            "label": "Google Form Entry ID",
            "placeholder": "entry.xxx"
          },
          {
            "type": "text",
            "id": "placeholder",
            "label": "Placeholder",
            "default": "Nhập tin nhắn của bạn"
          },
          {
            "type": "checkbox",
            "id": "required",
            "label": "Required",
            "default": false
          }
        ]
      },
      {
        "type": "select_field",
        "name": "Dropdown Field",
        "settings": [
          {
            "type": "text",
            "id": "label",
            "label": "Field Label",
            "default": "Lựa chọn"
          },
          {
            "type": "text",
            "id": "entry",
            "label": "Google Form Entry ID",
            "placeholder": "entry.xxx"
          },
          {
            "type": "textarea",
            "id": "options",
            "label": "Options (separate by comma or new line)",
            "placeholder": "Option 1, Option 2, Option 3\nOR\nOption 1\nOption 2\nOption 3"
          },
          {
            "type": "checkbox",
            "id": "required",
            "label": "Required",
            "default": false
          }
        ]
      },
      {
        "type": "checkbox_field",
        "name": "Checkbox Field",
        "settings": [
          {
            "type": "text",
            "id": "label",
            "label": "Field Label",
            "default": "Chọn các tùy chọn"
          },
          {
            "type": "text",
            "id": "entry",
            "label": "Google Form Entry ID",
            "placeholder": "entry.xxx"
          },
          {
            "type": "textarea",
            "id": "options",
            "label": "Options (separate by comma or new line)",
            "placeholder": "Option 1, Option 2, Option 3\nOR\nOption 1\nOption 2\nOption 3"
          },
          {
            "type": "checkbox",
            "id": "required",
            "label": "Required",
            "default": false
          }
        ]
      },
      {
        "type": "radio_field",
        "name": "Radio Field",
        "settings": [
          {
            "type": "text",
            "id": "label",
            "label": "Field Label",
            "default": "Chọn một tùy chọn"
          },
          {
            "type": "text",
            "id": "entry",
            "label": "Google Form Entry ID",
            "placeholder": "entry.xxx"
          },
          {
            "type": "textarea",
            "id": "options",
            "label": "Options (separate by comma or new line)",
            "placeholder": "Option 1, Option 2, Option 3\nOR\nOption 1\nOption 2\nOption 3"
          },
          {
            "type": "checkbox",
            "id": "required",
            "label": "Required",
            "default": false
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Advanced Form to Sheet",
        "blocks": [
          {"type": "text_field"},
          {"type": "text_field"},
          {"type": "textarea_field"}
        ]
      }
    ]
  }
{% endschema %}
